#include <stdio.h>

int main() {
    int numerovisitantes;

    // o recepcionista recebe número de visitantes do dia
    printf("Digite o número de visitantes que entraram na empresa hoje: ");

    scanf("%d", &numerovisitantes);

    // Mensagem de confirmação
    printf("Número de visitantes registrado: %d\n", numerovisitantes);

    printf("Obrigado por registrar o número de visitantes.\n");

    return 0;
}
